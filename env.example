# IIMS Sales Analytics Agent Configuration
# Copy this file to .env and configure your values

# Backend API Configuration
BASE_URL=http://localhost:8000
X_TENANT_ID=11111111-1111-1111-1111-111111111111
X_LOCATION_ID=22222222-2222-2222-2222-222222222222

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Server Configuration
PORT=3000
CORS_ORIGIN=http://localhost:3001
ENABLE_STREAMING=true
MAX_CONVERSATION_HISTORY=20
SESSION_TTL_SECONDS=3600
NODE_ENV=production

# Optional: Redis Configuration (if using Redis service)
REDIS_URL=redis://localhost:6379

# Optional: Database Configuration (if using PostgreSQL service)
DATABASE_URL=postgresql://iims_user:iims_password@localhost:5432/iims_analytics
